{
    "compilerOptions": {
      "types": ["node", "jest", "@testing-library/jest-dom"
    ],
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowUmdGlobalAccess": true,
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      },
      "include": [
        "./config/jest/setupTests.ts",
        "src"
      ],
  }